		ImageIcon enem = new ImageIcon(ene);

		enemy1 = new JLabel(enem);
		enemy1.setBounds(enemy1moveX, enemy1moveY, 80, 80);
		c.add(enemy1);

		// 적 2
		ImageIcon e2 = new ImageIcon("img\\Enemy.png");
